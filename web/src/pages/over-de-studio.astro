---
import Layout from '../components/layout.astro';
import { getStudioInfo, getStudioOpenGraphImage } from '../lib/sanity';
import OverDeStudioSection from '../sections/over-de-studio.astro';

const [studioInfo, openGraphImage] = await Promise.all([
  getStudioInfo(),
  getStudioOpenGraphImage(),
]);
---

<Layout
  seo={{
    description: studioInfo.shortDescription,
    openGraphImage,
    title: 'Over de Studio',
  }}
>
  <OverDeStudioSection studioInfo={studioInfo} />
</Layout>
