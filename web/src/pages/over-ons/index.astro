---
import Layout from '../../components/layout.astro';
import { getPersons, getStudioInfo, getStudioOpenGraphImage } from '../../lib/sanity';
import OverOnsSection from '../../sections/over-ons.astro';

const [openGraphImage, studioInfo, persons] = await Promise.all([
  getStudioOpenGraphImage(),
  getStudioInfo(),
  getPersons(),
]);
---

<Layout
  seo={{
    description: studioInfo.shortDescription,
    openGraphImage,
    title: 'Over Ons',
  }}
>
  <OverOnsSection persons={persons} />
</Layout>
